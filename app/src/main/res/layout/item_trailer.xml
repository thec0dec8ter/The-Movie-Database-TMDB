<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@android:color/holo_blue_bright">

    <ImageView
        android:id="@+id/poster2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/ic_play"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@id/poster2"
        app:layout_constraintStart_toStartOf="@id/poster2"
        app:layout_constraintBottom_toBottomOf="@id/poster2"
        app:layout_constraintEnd_toEndOf="@id/poster2"/>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/poster2"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <TextView
            android:text="I dont even know what to say"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="I dont even know what to say"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>